<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Fullscreen" parent="Fullscreen">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_text_bg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/px30</item>
    </style>

    <style name="lay_page_sel_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px340</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sel_text_homepage</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="text_sel_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/px35</item>
    </style>


    <!--第三方的库design设置标题的样式-->
    <style name="AppTheme_design_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px120</item>
        <item name="android:layout_marginLeft">@dimen/px10</item>
        <item name="android:layout_marginRight">@dimen/px10</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/px40</item>
    </style>

    <style name="text_ecg_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/px25</item>
        <item name="android:padding">@dimen/px10</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="text_ecg_data_history">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/px25</item>
        <item name="android:padding">@dimen/px10</item>
        <item name="android:textColor">@color/tv_ecg_data_color</item>
    </style>

</resources>
